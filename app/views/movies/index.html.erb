<h1>Fresh Apples</h1>
    <%= link_to "Submit a movie!", new_movie_path %>
    <hr>
    <% @movies.each do |movie| %>
      <%= image_tag movie.image_url.to_s %>
      <h2><%= link_to movie.title, movie_path(movie) %></h2>
      <h4>Release Date: <%= formatted_date(movie.release_date) %></h4>
      <h4>Director: <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
      <p>Description: <%= movie.description %></p>
      <h4>Average Rating: <%= movie.review_average %>/10</h4>
      <hr>
    <% end %>
